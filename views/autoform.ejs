<script type="text/javascript">
    $("#save").click(function() {
        var text = $("#output")[0].outerHTML;
       
        var popup = window.open("", "popup");
        popup.document.body.innerHTML = text ;
        popup.focus();
        popup.print();
        });
</script> 
	<script type="text/javascript">
		$('input[type=radio][name=part_or_full_time]').on('change', function() {
			  switch ($(this).val()) {
			    case 'full-time':
			      $(".employee_being_hired_on_a_part_tim_or_full_time_basis").text("full-time");
			      break;
			    case 'part-time':
			      $(".employee_being_hired_on_a_part_tim_or_full_time_basis").text("part-time");
			      break;
			  }
			});

		$('input[type=radio][name=if_no_probation_remove_this]').on('change', function() {
			  switch ($(this).val()) {
			    case 'Yes':
			      break;
			    case 'No':
			      $(".if_no_probation_remove_this").text("");
			      break;
			  }
			});
	</script>
	
